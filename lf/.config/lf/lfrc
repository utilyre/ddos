set mouse true
set drawbox true
set icons true
set incsearch true
set scrolloff 2
set previewer "lfpv"
set cleaner "lfcl"

cmd create %mk "$@"

map <m-1> :updir
map <m-2> :open
map <m-down> :down
map <m-up> :up
map r :reload
map d :cut
map y :copy
map p :paste
map c :rename
map x :delete
map a push :create<space>
map gw &wali "$f"
map gd &printf "%s\n" "$fx" | xargs --delimiter="\n" dragon-drop --on-top --all-compact --and-exit
map gD &printf "%s\n" "$fx" | xargs --delimiter="\n" dragon-drop --on-top --all-compact
