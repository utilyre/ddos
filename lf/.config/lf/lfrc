set mouse true
set drawbox true
set scrolloff 2
set icons true
set info size
set incsearch true
set previewer fewer
set cleaner wiper

map <m-1> :updir
map <m-2> :open
map <m-down> :down
map <m-up> :up
map q :quit
map r :reload
map d :cut
map y :copy
map p :paste
map c :rename
map x :delete
map a push %mk<space>
map gw &wali "$f"
map gp &printf "%s\n" "$fx" | tr -- "\n" "\0" | xargs --null -- dragon-drop --and-exit --on-top --all-compact
