set mouse true
set drawbox true
set icons true
set incsearch true
set scrolloff 2
set previewer "lfpv"
set cleaner "lfcl"

map <m-1> :open
map <m-2> :updir
map <m-down> :down
map <m-up> :up
map r :reload
map d :cut
map y :copy
map p :paste
map c :rename
map x :delete
map a push :create<space>
map gw &wali "$f"
map gd &echo "$fx" | xargs --delimiter="\n" dragon-drop --on-top --all-compact --and-exit
map gD &echo "$fx" | xargs --delimiter="\n" dragon-drop --on-top --all-compact

cmd create %{{
f="$(realpath --canonicalize-missing "$1")"
[ "$(printf "%s" "$1" | tail --bytes="1")" = "/" ] && exec mkdir --parents "$f"

mkdir --parents "$(dirname "$f")"
touch "$f"
}}
