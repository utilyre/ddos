set mouse true
set drawbox true
set scrolloff 2
set icons true
set info size
set incsearch true
set previewer fewer
set cleaner wiper

map <m-1> :updir
map <m-2> :open
map <m-down> :down
map <m-up> :up
map q :quit
map r :reload
map d :cut
map y :copy
map p :paste
map c :rename
map x :delete
map gw &wali "$f"
map gp &printf "%s\n" "$fx" | xargs --delimiter="\n" -- dragon-drop --on-top --all
