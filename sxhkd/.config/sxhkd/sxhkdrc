super + {_,shift} + q
	bspc node {--close,--kill}
super + {space,t,f}
	bspc node --state "{floating,tiled,fullscreen}"
super + {_,shift} + {k,j}
	bspc node {--focus,--swap} '{prev,next}.local.!hidden.window'
super + {_,shift} + {h,l}
	bspc {desktop --focus,node --to-desktop} "{prev,next}"

XF86AudioMute
	pactl set-sink-mute "$(pactl get-default-sink)" "toggle"
XF86AudioLowerVolume
	pactl set-sink-volume "$(pactl get-default-sink)" "-2%"
XF86AudioRaiseVolume
	pactl set-sink-volume "$(pactl get-default-sink)" "+2%"

XF86AudioPlay
	playerctl play-pause
XF86AudioPrev
	playerctl previous
XF86AudioNext
	playerctl next

super + Return
	gtk-launch terminal
super + r
	gtk-launch launcher
super + v
	gtk-launch visual
super + b
	gtk-launch browser
super + e
	gtk-launch explorer

