super + {_,shift} + q
	bspc node {--close,--kill}
super + {space,t,f}
	bspc node --state "{floating,tiled,fullscreen}"
super + {_,shift} + {k,j}
	bspc node {--focus,--swap} '{prev,next}.local.!hidden.window'
super + {_,shift} + {h,l}
	bspc {desktop --focus,node --to-desktop} "{prev,next}"

XF86AudioMute
	pactl set-sink-mute "$(pactl get-default-sink)" "toggle"
XF86Audio{LowerVolume,RaiseVolume}
	pactl set-sink-volume "$(pactl get-default-sink)" "{-2%,+2%}"
XF86Audio{Play,Prev,Next}
	playerctl {play-pause,previous,next}

