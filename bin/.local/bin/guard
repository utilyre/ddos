#!/bin/sh

mkdir --parents -- "$GUARD_DATA"

case "$1" in
	"init") printf -- "%s" "$2" > "$GUARD_STATE" ;;
	"add") gpg --recipient="$(cat -- "$GUARD_STATE")" --armor --encrypt - < "/dev/stdin" > "$GUARD_DATA/$2" ;;
	"generate") tr --delete --complement -- "A-Za-z0-9" < "/dev/urandom" | head --bytes="32" | guard add "$2" ;;
	"menu")
		name="$(find "$GUARD_DATA" -type "f" -name "*" -printf "%f\n" | dmenu -p "ï‚„ ")" || exit "130"
		password="$(gpg --decrypt -- "$GUARD_DATA/$name")" || exit "130"

		notify-send "Guard" "Copied $name password to clipboard for 10s"
		printf -- "%s" "$password" | xsel --clipboard --selectionTimeout "10000"
		;;
esac
