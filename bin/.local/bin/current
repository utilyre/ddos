#!/bin/sh

[ "$#" -eq "0" ] && {
	playerctld &
	playerctl metadata --follow --format="{{ mpris:trackid }}" |
		while read -r _; do
			title="$(playerctl metadata --format="{{ trunc(xesam:title, 16) }}")"
			artist="$(playerctl metadata --format="{{ trunc(xesam:artist, 16) }}")"
			[ -z "$title" ] || [ -z "$artist" ] && continue

			herbe " Sang" "Playing \"$title\" by \"$artist\"." &
		done
}

case "$1" in
	"toggle") playerctl play-pause ;;
	"prev") playerctl previous ;;
	"next") playerctl next ;;
esac
