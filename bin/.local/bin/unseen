#!/bin/sh

mkdir --parents -- "$UNSEEN_DATA"

entries="$(sed -- "s/ +#.*$//;/^ *$/d" "$UNSEEN_CONFIG")"
while read -r entry; do
  name="${entry%%->*}"
  url="${entry#*->}"

  curl --user-agent "$(printf -- "%s\n" "$entries" | head --lines="1")" -- "$url" > "$UNSEEN_DATA/$name"
done <<- EOF
	$(printf -- "%s\n" "$entries" | tail --lines="+2")
EOF
