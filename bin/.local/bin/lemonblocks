#!/bin/sh

flexblocks | lemonbar \
	-g "$(xrandr | awk --assign="FS=[x ]" -- "(\$0 ~ /*/) { print \$4 }")x24+0+0" \
	-f "monospace:size=10" \
	-u "2" \
	-B "#aa1d1d1d" \
	-F "#ffd4d4d4" \
	-U "#ffd4d4d4" | sh &

sleep -- "1s"

trayer \
  --monitor "primary" \
	--edge "top" \
	--align "right" \
	--widthtype "pixel" \
	--heighttype "pixel" \
	--width "96" \
	--height "24" \
	--expand "false" \
	--transparent "true" \
	--alpha "85" \
	--tint "0x1d1d1d" &
