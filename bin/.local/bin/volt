#!/bin/sh

options="$(getopt --name="volt" --options="i,o" --longoptions="device::" -- "$@")"
[ "$?" -ne "0" ] && exit 1

device="source"
eval set -- "$options"
while true; do
	[ "$1" = "--" ] && { shift; break; }

	case "$1" in
		"-i") device="source"; shift ;;
		"-o") device="sink"; shift ;;
		"--device") device="$2"; shift "2" ;;
	esac
done

default="$(pactl get-default-"$device")"
case "$1" in
	"get")
		[ "$(pactl get-"$device"-mute "$default")" = "Mute: yes" ] && { echo "Muted"; exit 1; }
		pactl get-"$device"-volume "$default" | awk "(NR == 1) { print \$5 }"; exit 0
		;;
	"switch")
		pactl set-default-"$device" "$2"
		[ "$?" -eq "0" ] && herbe " Volt" "Set default \"$device\" to \"$2\"." &
		;;
	"toggle")
		pactl set-"$device"-mute "$default" "toggle"
		[ "$?" -eq "0" ] && herbe " Volt" "Toggled \"$device\" mute." &
		;;
	"down") pactl set-"$device"-volume "$default" "-2%" ;;
	"up") pactl set-"$device"-volume "$default" "+2%" ;;
esac

killall -12 "fblk"
