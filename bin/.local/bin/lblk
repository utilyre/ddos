#!/bin/sh

padding="$(($(xrdb -get "bspwm.padding") + $(xrdb -get "bspwm.gap")))"
width="$(($(xrandr | awk --field-separator="[ x]" -- "(\$0 ~ /*/) { print \$4 }") - 2 * $padding))"
height="$(xrdb -get "fblk.height")"

fblk | lemonbar \
	-g "${width}x${height}+${padding}+${padding}" \
	-f "$(xrdb -get "fblk.font")" \
	-u "$(xrdb -get "fblk.underline")" \
	-B "$(xrdb -get "fblk.background")" \
	-F "$(xrdb -get "fblk.foreground")" | sh
